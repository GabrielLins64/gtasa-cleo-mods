SCRIPT_START
{
NOP

LVAR_INT model
LVAR_INT scplayer

GET_PLAYER_CHAR 0 scplayer

// Bike model
model = 481

mainloop:
WAIT 0

IF IS_KEY_PRESSED VK_TAB
AND IS_KEY_PRESSED VK_KEY_B
AND IS_KEY_PRESSED VK_KEY_I
  SPAWN_VEHICLE_BY_CHEATING model

  WHILE IS_KEY_PRESSED VK_KEY_B
  OR IS_KEY_PRESSED VK_TAB
  OR IS_KEY_PRESSED VK_KEY_I
    WAIT 0
  ENDWHILE
ENDIF

GOTO mainloop
}
